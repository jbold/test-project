# Production Environment Variables
# IMPORTANT: Never commit actual production values to version control

# Database Configuration
POSTGRES_DB=legal_toolkit_prod
POSTGRES_USER=legal_user_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# Application Security
SECRET_KEY=CHANGE_ME_MINIMUM_32_CHARACTERS_STRONG_SECRET_KEY
DEVELOPMENT_MODE=false

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Stripe Configuration (Production Keys)
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# API URLs
PUBLIC_API_URL=https://api.yourdomain.com

# Frontend Configuration (Vite Environment Variables)
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_APP_BASE_URL=https://yourdomain.com

# SSL Certificate Paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key